---
const links = [
  { href: '#services', label: 'Services' },
  { href: '#process', label: 'Process' },
  { href: '#portfolio', label: 'Samples' },
  { href: '#about', label: 'About' },
  { href: '#contact', label: 'Contact' }
];
---

<header class="flex items-center justify-between py-6">
  <div class="flex items-center gap-3">
    <div class="h-10 w-10 rounded-full bg-signal-500/20 border border-signal-500/40 flex items-center justify-center text-xl font-semibold text-signal-400">
      SD
    </div>
    <div>
      <p class="text-sm uppercase tracking-[0.24em] text-slate-400">SignalDraft</p>
      <p class="text-lg font-semibold text-white">Ghostwriting Studio</p>
    </div>
  </div>
  <nav class="hidden md:flex items-center gap-6 text-sm text-slate-200">
    {links.map((link) => (
      <a href={link.href} class="hover:text-signal-400 transition-colors">{link.label}</a>
    ))}
    <a href="#contact" class="ml-2 inline-flex items-center rounded-full bg-signal-500 px-4 py-2 text-sm font-semibold text-ink-900 shadow-card hover:bg-signal-400 transition-colors">
      Book a Call
    </a>
  </nav>
</header>
